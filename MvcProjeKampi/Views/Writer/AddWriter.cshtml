@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "AddWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Mvc Proje Kampı</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-20/css/style.css">

</head>
<body class="img js-fullheight" style="background-image: url(/AdminLTE-3.0.4/login-form-20/images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Mvc Proje Kampı Yazar Girişi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Bir Hesabın Var mı?</h3>
                        @using (Html.BeginForm("AddWriter", "Writer", FormMethod.Post))
                        {
                            <div class="form-group">
                                @Html.Label("Yazar Adı")
                                @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterName, "", new { @style = "color:red" })
                                <br />
                                @Html.Label("Yazar Soyadı")
                                @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterSurname, "", new { @style = "color:red" })
                                <br />
                                @Html.Label("Yazar Mail")
                                @Html.TextBoxFor(x => x.WriterEmail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterEmail, "", new { @style = "color:red" })
                                <br />
                                @Html.Label("Yazar Şifresi")
                                @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @style = "color:red" })
                                <br />
                                @Html.Label("Yazar Görsel Linki")
                                @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterImage, "", new { @style = "color:red" })
                                <br />
                                @Html.Label("Yazar Ünvan")
                                @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterTitle, "", new { @style = "color:red" })
                                <br />
                                @Html.Label("Yazar Hakkında")
                                @Html.TextBoxFor(x => x.WriterAbout, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @style = "color:red" })
                                <br />
                                <button class="btn btn-info">Yazarı Ekle</button>
                            </div>
                        }
                        <p class="w-100 text-center">&mdash; Veya Sosyal Medya ile Giriş Yapın &mdash;</p>
                        <div class="social d-flex text-center">
                            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-20/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-20/js/main.js"></script>

</body>
</html>


